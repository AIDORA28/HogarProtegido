<UserControl x:Class="HogarProtegido.Treasury.Views.RegistroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:models="clr-namespace:HogarProtegido.Treasury.Models"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cabecera y Fecha -->
            <RowDefinition Height="Auto"/>
            <!-- Formularios y Listas -->
            <RowDefinition Height="Auto"/>
            <!-- Resumen y Guardar -->
        </Grid.RowDefinitions>

                <!-- 1. Cabecera Senior Control -->
                <md:Card Grid.Row="0" Margin="0,0,0,30" Padding="20" UniformCornerRadius="15" Background="#F8FAFC" md:ElevationAssist.Elevation="Dp0">
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="REGISTRO DE OPERACIONES" FontWeight="Black" FontSize="24" Foreground="{StaticResource PrimaryDarkBrush}"/>
                                <!-- Badge de Modo Edición -->
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="12" Padding="12,4" Margin="15,0,0,0" VerticalAlignment="Center"
                                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <md:PackIcon Kind="PencilCircle" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                                        <TextBlock Text="MODO EDICIÓN" FontSize="11" FontWeight="Black" Foreground="Black" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="Gestión de caja y movimientos diarios" FontSize="14" Foreground="#64748B"/>
                        </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <md:PackIcon Kind="CalendarClock" Foreground="{StaticResource PrimaryBrush}" Width="24" Height="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding Fecha}" 
                                DisplayDateEnd="{Binding Today, Mode=OneWay}"
                                md:HintAssist.Hint="FECHA DE TRABAJO" Width="220"
                                FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </md:Card>

        <!-- 2. Cuerpo: Ingresos y Egresos -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <!-- Espaciador -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- COLUMNA INGRESOS -->
            <md:Card Grid.Column="0" UniformCornerRadius="20" Padding="25" md:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="{StaticResource IncomeBrush}" Width="5" Height="25" CornerRadius="2" Margin="0,0,12,0"/>
                        <TextBlock Text="INGRESOS" Foreground="{StaticResource IncomeBrush}" FontWeight="Black" FontSize="20"/>
                    </StackPanel>

                    <!-- Formulario Ingreso -->
                    <Border Background="#F1F5F9" Padding="15" CornerRadius="12" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBox md:HintAssist.Hint="Concepto de Venta / Origen" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Text="{Binding ConceptoIngreso, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,10" Background="White"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox md:HintAssist.Hint="Monto (S/)" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Text="{Binding MontoIngreso, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White" Margin="0,0,10,0"/>
                                <Button Grid.Column="1" Style="{StaticResource PrimaryButton}" Background="{StaticResource IncomeBrush}" 
                                        BorderBrush="{StaticResource IncomeBrush}"
                                        Content="＋ AÑADIR" Command="{Binding AgregarCommand}" CommandParameter="Ingreso"
                                        Height="50" Padding="20,0" md:ButtonAssist.CornerRadius="8" FontWeight="Black" Margin="0,3,0,2"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Lista Temporal Ingresos (Fluida) -->
                    <ItemsControl ItemsSource="{Binding SessionIngresos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#F1F5F9" BorderThickness="0,0,0,1" Padding="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Concepto}" FontSize="14" Foreground="#1E293B" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Monto, StringFormat='S/ {0:N2}'}" FontWeight="Black" Foreground="{StaticResource IncomeBrush}" FontSize="15" VerticalAlignment="Center"/>
                                            
                                            <!-- Botón Eliminar Individual -->
                                            <Button Grid.Column="2" 
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Foreground="{StaticResource ExpenseBrush}"
                                                    Width="30" Height="30" Padding="0" Margin="15,0,0,0"
                                                    Command="{Binding DataContext.EliminarMovimientoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <md:PackIcon Kind="MinusCircleOutline" Width="20" Height="20"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    
                </StackPanel>
            </md:Card>

            <!-- COLUMNA EGRESOS -->
            <md:Card Grid.Column="2" UniformCornerRadius="20" Padding="25" md:ElevationAssist.Elevation="Dp2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Background="{StaticResource ExpenseBrush}" Width="5" Height="25" CornerRadius="2" Margin="0,0,12,0"/>
                        <TextBlock Text="EGRESOS" Foreground="{StaticResource ExpenseBrush}" FontWeight="Black" FontSize="20"/>
                    </StackPanel>

                    <!-- Formulario Egreso -->
                    <Border Background="#F1F5F9" Padding="15" CornerRadius="12" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBox md:HintAssist.Hint="Concepto de Gasto / Pago" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Text="{Binding ConceptoEgreso, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,10" Background="White"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox md:HintAssist.Hint="Monto (S/)" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Text="{Binding MontoEgreso, UpdateSourceTrigger=PropertyChanged}"
                                         Background="White" Margin="0,0,10,0"/>
                                <Button Grid.Column="1" Style="{StaticResource PrimaryButton}" Background="{StaticResource ExpenseBrush}" 
                                        BorderBrush="{StaticResource ExpenseBrush}"
                                        Content="－ AÑADIR" Command="{Binding AgregarCommand}" CommandParameter="Egreso"
                                        Height="50" Padding="20,0" md:ButtonAssist.CornerRadius="8" FontWeight="Black"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Lista Temporal Egresos (Fluida) -->
                    <ItemsControl ItemsSource="{Binding SessionEgresos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#F1F5F9" BorderThickness="0,0,0,1" Padding="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Concepto}" FontSize="14" Foreground="#1E293B" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Monto, StringFormat='S/ {0:N2}'}" FontWeight="Black" Foreground="{StaticResource ExpenseBrush}" FontSize="15" VerticalAlignment="Center"/>
                                            
                                            <!-- Botón Eliminar Individual -->
                                            <Button Grid.Column="2" 
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Foreground="{StaticResource ExpenseBrush}"
                                                    Width="30" Height="30" Padding="0" Margin="15,0,0,0"
                                                    Command="{Binding DataContext.EliminarMovimientoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <md:PackIcon Kind="MinusCircleOutline" Width="20" Height="20"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    
                </StackPanel>
            </md:Card>
        </Grid>

        <!-- 3. Pie: Resumen y Guardado -->
        <Grid Grid.Row="2" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Panel de Cierre Temporal -->
            <md:Card Grid.Column="0" UniformCornerRadius="15" Padding="20" Background="#F8FAFC" Margin="0,0,20,0" md:ElevationAssist.Elevation="Dp0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ENTRADAS (+)" FontSize="10" FontWeight="Black" Foreground="{StaticResource IncomeBrush}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalIngresos, StringFormat='S/ {0:N2}'}" FontSize="20" FontWeight="Black" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Text="-" FontSize="24" Foreground="#CBD5E1" VerticalAlignment="Center" Margin="10,0"/>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="SALIDAS (-)" FontSize="10" FontWeight="Black" Foreground="{StaticResource ExpenseBrush}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalGastos, StringFormat='S/ {0:N2}'}" FontSize="20" FontWeight="Black" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Column="3" Text="=" FontSize="24" Foreground="#CBD5E1" VerticalAlignment="Center" Margin="10,0"/>

                    <StackPanel Grid.Column="4">
                        <TextBlock Text="RESULTADO NETO" FontSize="10" FontWeight="Black" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SaldoDia, StringFormat='S/ {0:N2}'}" FontSize="20" FontWeight="Black" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </md:Card>

            <!-- Botón Final Guardar -->
            <Button Grid.Column="1" Style="{StaticResource PrimaryButton}" 
                    Background="{StaticResource PrimaryDarkBrush}"
                    Command="{Binding GuardarLibroCommand}"
                    Height="70" Padding="40,0" md:ButtonAssist.CornerRadius="15"
                    md:ElevationAssist.Elevation="Dp4">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="ContentSaveCheck" Width="28" Height="28" Margin="0,0,15,0" VerticalAlignment="Center" Foreground="#FFFDFDFD"/>
                    <TextBlock FontSize="18" FontWeight="Black" VerticalAlignment="Center" Foreground="White">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="GUARDAR CIERRE DIARIO"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                        <Setter Property="Text" Value="ACTUALIZAR CIERRE EXISTENTE"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
    </ScrollViewer>
</UserControl>
