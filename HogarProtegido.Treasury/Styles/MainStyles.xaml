<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- PALETA DE COLORES FLUIDA (Teal & Amber Modern) -->
    <Color x:Key="PrimaryColor">#00897b</Color>
    <Color x:Key="PrimaryDarkColor">#004d40</Color>
    <Color x:Key="PrimaryLightColor">#4ebaaa</Color>
    <Color x:Key="AccentColor">#ffb300</Color>
    
    <Color x:Key="BackgroundColor">#F8FAFB</Color> <!-- Fondo de app fluido -->
    <Color x:Key="SurfaceColor">#FFFFFF</Color>    <!-- Superficie de tarjetas -->
    <Color x:Key="BorderColor">#E0E4E8</Color>     <!-- Bordes sutiles -->
    
    <Color x:Key="IncomeColor">#2e7d32</Color>
    <Color x:Key="ExpenseColor">#c62828</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    
    <SolidColorBrush x:Key="IncomeBrush" Color="{StaticResource IncomeColor}"/>
    <SolidColorBrush x:Key="ExpenseBrush" Color="{StaticResource ExpenseColor}"/>

    <!-- TOKENS DE DISEÑO (ESTANDARIZACIÓN) -->
    <sys:Double x:Key="StandardCornerRadiusValue">12</sys:Double>
    <CornerRadius x:Key="StandardCornerRadius">12</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">15</CornerRadius>
    <CornerRadius x:Key="ButtonCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="InputCornerRadius">8</CornerRadius>

    <sys:Double x:Key="FontExtraLarge">24</sys:Double>
    <sys:Double x:Key="FontLarge">20</sys:Double>
    <sys:Double x:Key="FontMedium">16</sys:Double>
    <sys:Double x:Key="FontSmall">12</sys:Double>

    <!-- SOBREESCRITURAS MATERIAL DESIGN -->
    <SolidColorBrush x:Key="MaterialDesignBody" Color="#212121"/>
    <SolidColorBrush x:Key="MaterialDesignBodyLight" Color="#757575"/>
    <SolidColorBrush x:Key="PrimaryMidForegroundBrush" Color="White"/>
    
    <!-- ESTILO TEXTO BASE -->
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontMedium}"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="FontFamily" Value="Segoe UI, Roboto, Helvetica, Arial"/>
    </Style>

    <!-- ESTILO CABECERA DE MÓDULO (UNIFICADO) -->
    <Style x:Key="ModuleHeader" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Padding" Value="25,15"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style x:Key="ModuleTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontExtraLarge}"/>
        <Setter Property="FontWeight" Value="Black"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- ESTILO TARJETAS UNIFICADAS -->
    <Style x:Key="ModernCard" TargetType="md:Card">
        <Setter Property="UniformCornerRadius" Value="{StaticResource StandardCornerRadiusValue}"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="IncomeCard" TargetType="md:Card" BasedOn="{StaticResource ModernCard}">
        <Setter Property="BorderBrush" Value="{StaticResource IncomeBrush}"/>
        <Setter Property="BorderThickness" Value="0,5,0,0"/>
    </Style>

    <Style x:Key="ExpenseCard" TargetType="md:Card" BasedOn="{StaticResource ModernCard}">
        <Setter Property="BorderBrush" Value="{StaticResource ExpenseBrush}"/>
        <Setter Property="BorderThickness" Value="0,5,0,0"/>
    </Style>

    <!-- ESTILO BOTONES UNIFICADOS -->
    <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="md:ButtonAssist.CornerRadius" Value="8"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Padding" Value="20,0"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    </Style>

    <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style x:Key="SidebarButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Height" Value="55"/>
        <Setter Property="Padding" Value="20,0"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="md:RippleAssist.Feedback" Value="#33FFFFFF"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" CornerRadius="12" Margin="10,2,10,2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Indicador de Selección sutil -->
                            <Border x:Name="Indicator" Grid.Column="0" Width="4" Height="20" Background="{StaticResource AccentBrush}" 
                                    CornerRadius="2" Margin="-20,0,12,0" Visibility="Collapsed"/>
                            
                            <ContentPresenter Grid.Column="1" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                            
                            <!-- Icono de flecha sutil al hover -->
                            <md:PackIcon x:Name="Arrow" Grid.Column="2" Kind="ChevronRight" Width="18" Height="18" 
                                         Foreground="{StaticResource AccentBrush}" Opacity="0" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1AFFFFFF"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter TargetName="Arrow" Property="Opacity" Value="0.5"/>
                        </Trigger>
                        <!-- Simulación de estado seleccionado vía CommandParameter o similar si se desea, por ahora hover senior -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ESTILO DATAGRID MODERNO (UNIFICADO) -->
    <Style x:Key="ModernDataGrid" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="ColumnHeaderHeight" Value="40"/>
        <Setter Property="FontSize" Value="14"/>
        <Style.Resources>
            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                <Setter Property="Background" Value="#F1F3F4"/>
                <Setter Property="FontWeight" Value="Black"/>
                <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
                <Setter Property="Padding" Value="10,0"/>
            </Style>
        </Style.Resources>
    </Style>

    <!-- ESTILO INPUTS UNIFICADOS -->
    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="md:TextFieldAssist.TextFieldCornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

    <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
        <Setter Property="md:TextFieldAssist.TextFieldCornerRadius" Value="8"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    </Style>

</ResourceDictionary>
